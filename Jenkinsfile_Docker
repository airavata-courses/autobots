def purgeImages() {
   try {
      sh 'docker stop $(docker ps -aq)'
	  sh 'docker rm $(docker ps -aq)'
	  sh 'docker rmi $(docker images -q)'
   }
   catch(error) {
   
   }
}

node{
    stage('Permissions') {
	   sh 'chown $USER:$USER -R .'
	   sh 'docker ps'
	}
    stage('Pull') {
        checkout scm
        sh 'docker-compose -f docker-compose.yml up -d'
	sh 'docker-compose exec -T broker kafka-topics --create --zookeeper zookeeper:2181 --replication-factor 1 --partitions 1 --topic trump'	
	}
    //stage('Test') {
    //    sh 'docker-compose exec -T broker kafka-topics --create --zookeeper zookeeper:2181 --replication-factor 1 --partitions 1 --topic trump'	
//	}
	stage('Prune') {
	   purgeImages()
	}
  }
